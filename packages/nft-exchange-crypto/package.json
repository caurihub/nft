    "license": "CC-BY-NC-SA-4.0",
    "homepage": "https://docs.caurihub.com/nft/",
    "bugs": {
        "url": "https://github.com/caurihub/nft-plugins/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/caurihub/nft-plugins.git"
    },
    "keywords": [
        "caurihub",
        "cauri",
        "core",
        "sdk",
